{% extends 'layout-admin.twig' %}

{% block content %}
<div class="main__content">
<section class="main__section">
    <h2 class="main__section-title">Изменить наименование</h2>
    <form class="main__second-form" method="post" action="">
        {% set className = errors|length > 0 ? "main__input--error" : "" %}
        <input class="main__input {{className}}" type="text" placeholder="Наименование" name="name" value="{{nameDiscipline}}">
        {% if errors|length > 0 %}
        <span class="main__input-error">{{errors.name}}</span>
        {% endif %}
        <div class="main__button-wrapper">
            <button class="main__form-button" type="submit">Изменить</button>
        </div>
    </form>
</section>
</div>
{% endblock %}