{% extends 'layout-admin.twig' %}

{% block content %}
<div class="main__content">
<section class="main__section">
    <h2 class="main__section-title">Список групп:</h2>
    <ul class="main__section-list">
        {% for group in groupsSlice %}
        <li class="main__section-item main__section-item--second-style">
            <h3 class="main__title main__title--second-style">{{group.Name}}</h3>
            <ul class="main__control-panel">
                <li class="main__panel-item" title="Удалить дисциплину">
                    <button class="main__panel-button" type="button" data-id="{{group.Id}}">
                        <svg class="main__panel-icon" width="28" height="28" role="img" aria-label="delete">
                            <use xlink:href="image/icons/sprite.svg#deleteIcon"></use>
                        </svg>
                        <span class="visually-hidden">Удалить</span>
                    </button>
                </li>
            </ul>
        </li>
        {% endfor %}
    </ul>
    {% set className = groups|length <= limit ? "pagintaion--none": ""%}
    <div class="pagintaion {{className}}">
        <ul class="pagination__list">
        {% for i in 1..pages %}
            <li class="pagination-item {{ i == page ? 'pagination-item--current' : '' }}">
                <a class="pagination-link" href="?page={{i}}">{{i}}</a>
            </li>
        {% endfor %}
        </ul>
    </div>
    <a class="main__button" type="button" href="add-group.php">Добавить группу</a>
</section>
</div>
{% endblock %}