{% extends 'layout-admin.twig' %}

{% block content %}
	<div class="main__content">
		<section class="main__section">
			<h2 class="main__section-title">Заявки на регистрацию</h2>
			{% if usersSlice|length > 0 %}
				<button class="main__accept-button" type="button">Одобрить всех</button>
				<ul class="main__list-user">
					{% for user in usersSlice %}
						<li class="main__list-item">
							<div class="main__user-data">
								<p class="main__user-text">Группа:
									<span>{{user.NameGroup}}</span>
								</p>
								<p class="main__user-text">
									<span>{{user.Surname}}
										{{user.Name}}
										{{user.Patronymic}}</span>
								</p>
								<p class="main__user-text">Логин:
									<span>{{user.Login}}</span>
								</p>
							</div>
							<div class="main__wrapper-button">
								<button class="main__button-control main__button-control--accept" data-id="{{user.Id}}">Одобрить</button>
								<button class="main__button-control main__button-control--cancel" data-id="{{user.Id}}">Отмена</button>
							</div>
						</li>
					{% endfor %}
				</ul>
			{% else %}
				<p class="main__stub-text">Нет данных</p>
			{% endif %}
			{% set className = users|length < limit ? "pagintaion--none": ""%}
			<div class="pagintaion {{className}}">
				<ul class="pagination__list">
					{% for i in 1..pages %}
						<li class="pagination-item {{ i == page ? 'pagination-item--current' : '' }}">
							<a class="pagination-link" href="?page={{i}}">{{i}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</section>
	</div>
{% endblock %}
