{% extends 'layout-admin.twig' %}

{% block content %}
	<div class="main__content">
		<section class="main__section">
			<h2 class="main__section-title">
				Добавить раздел</h2>
			<form class="main__second-form" method="post">
				<div class="main__select-wrapper">
					<select class="selectpicker select select--padding" data-width="300px" data-live-search="true" data-size="5" title="Дисциплины" name="discipline">
						{% for discipline in disciplines %}
							<option value="{{discipline.Id}}">{{discipline.Name}}</option>
						{% endfor %}
					</select>
				</div>
				<input class="main__input" type="text" placeholder="Наименование" name="name">
				<div class="main__button-wrapper">
					<button class="main__form-button" type="submit">Добавить</button>
				</div>
			</form>
		</section>
	</div>
{% endblock %}
